# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#Get all restaurants

GET /restaurants @controllers.RestaurantsController.getAll

#Get restaurant by id
GET /restaurants/:id @controllers.RestaurantsController.getById(id: Long)

#Save a restaurant
POST /restaurants @controllers.RestaurantsController.save

#Get all cities
GET /cities @controllers.CityController.getAll

#Create a reservation
POST /reservations @controllers.ReservationController.createReservation

# Home page
GET     /                           controllers.Application.index
GET     /db                         controllers.Application.db

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

